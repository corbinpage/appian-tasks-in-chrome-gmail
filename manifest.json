{
  "name": "Appian Tasks in Gmail",
  "description": "Display Appian Tasks in Gmail using the Streak Gmail SDK",
  "version": "0.1",
  "content_scripts": [
    {
      "matches": [
        "https://mail.google.com/*",
        "https://inbox.google.com/*"
      ],
      "js": ["inboxsdk.js","jquery-1.11.1.min.js","content.js"],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "https://mail.google.com/",
    "https://inbox.google.com/",
    "activeTab"
  ],
  "manifest_version": 2
}
