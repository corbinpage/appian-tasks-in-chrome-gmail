{
  "name": "Appian Tasks in Gmail",
  "description": "Display Appian Tasks in Gmail",
  "version": "0.1",
  // "browser_action": {
  //   "default_icon": "chrome-extension/spy-icon-19.png",
  //   "default_title": "Display Appian Tasks in Gmail",
  //   "default_popup": "chrome-extension/popup.html"
  // },
  "content_scripts": [
    {
      "matches": [
        "https://mail.google.com/*",
        "https://inbox.google.com/*",
        "file:///*"
      ],
      "js": [ "inboxsdk.js",
              "jquery-1.11.1.min.js",
              "content.js",
              "example.js",
              "lib/jquery-editable/js/jquery-editable-poshytip.js"],
      "css":[ 
              // "suite/tempo/css/table.css",
              // "suite/tempo/ui/font-awesome/css/font-awesome.min.css",
              // "suite/tempo/ui/lightbox/lightbox.css",
              // "suite/tempo/css/appian-style-a.css",
              // "suite/tempo/css/appian-style-b.css",
              // "suite/tempo/css/appian-style-c.css",
              // "suite/tempo/css/appian-style-d.css",
              // "suite/tempo/css/appian-style-e.css",
              "lib/jquery-editable/css/jquery-editable.css",
              "style.css"],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "activeTab",
    "storage",  
    "https://mail.google.com/",
    "https://api.myjson.com/"
  ],
  "optional_permissions": [
    "https://*/",
    "http://*/"
  ],
  "manifest_version": 2
}
