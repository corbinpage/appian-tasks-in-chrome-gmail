{
  "name": "Appian Tasks in Gmail",
  "description": "Display Appian Tasks in Gmail using the Streak Gmail SDK",
  "version": "0.1",
  "browser_action": {
    "default_icon": "chrome-extension/spy-icon-19.png",
    "default_title": "Blast the typo!",
    "default_popup": "chrome-extension/popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://mail.google.com/*",
        "https://inbox.google.com/*"
      ],
      "js": ["inboxsdk.js","jquery-1.11.1.min.js","content.js","taskDataJson.json"],
      "css":["style.css"],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "https://mail.google.com/",
    "https://inbox.google.com/",
    "activeTab"
  ],
  "manifest_version": 2
}
